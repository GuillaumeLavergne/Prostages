{% extends 'temp.html.twig' %}

{% block title %}
    <div class="jumbotron">
        <h1 class="display-4">Liste des formations !</h1>
            <p class="lead">Trouvez votre formation afin de voir quels stages vous sont propos√©s ! </p>
        <hr class="my-4">
            <p>Vous pouvez filtrer la liste des stages par la formation voulue avec le lien "Filtrer !" .</p>
        </hr>   
    </div>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% for formation in formations %}
    <div class="container-sm bg-grey border border-dark" >
            <table width=100%  style="text-align:right">
            <tbody>
                <tr>
                    <td align=center>
                        <p>
                            <div style="font-weight:bolder;font-size:large"> {{formation.nomLong}} </div>
                            ( {{formation.nomCourt}} )
                        </p>
                    </td>
                    <td align=right>
                        <a href="http://127.0.0.1:8000/stage/formation/{{formation.nomLong}}" >Filtrer !</a>
                    </td>
                </tr>
            </tbody>
            </table>
        </div>
        <br>
{% endfor %}

{% endblock %}
