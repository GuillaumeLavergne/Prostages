{% extends 'temp.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div>
        <h1 style="border-bottom:2px dashed black"> Liste de toutes les stages  : </h1>
    </div>

    <div class="row row-cols-1 row-cols-md-5 g-4">

    {% for stage in stages %}

    <div class="col">
        <div class="card border-secondary mb-3" style="max-width: 18rem;">
            <div class="card-header">{{stage.titre}}</div>
                <div class="card-body text-secondary">
                    <p class="card-text">Stage propos√© par l'entreprise : {{stage.entreprise.nom}}</p>
                    <a href="http://127.0.0.1:8000/stages/{{stage.id}}" class="btn btn-primary">en savoir plus !</a>
                </div>
        </div>
    </div>

    {% endfor %}

    </div>
    
{% endblock %}
